with "config/rinha_2024_q1_ada_config.gpr";
project Rinha_2024_Q1_Ada is

   for Source_Dirs use (
      "src/",
      "src/helper/",
      "config/"
   );
   for Object_Dir use "obj/" & Rinha_2024_Q1_Ada_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("rinha_2024_q1_ada.adb");

   package Compiler is
      for Default_Switches ("Ada") use Rinha_2024_Q1_Ada_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Rinha_2024_Q1_Ada;
